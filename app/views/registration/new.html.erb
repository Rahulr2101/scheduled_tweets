<h1> Welcome to registeration page</h1>


<%= form_with model:@user, url:sign_up_path do |form| %>
<% if @user.errors.any? %>
    <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |messsage|%>
        <div><%= messsage %></div>
        <%end%>
    </div>
<%end%>
<div class="mt-3">
    <%= form.label :email%>
<%= form.text_field :email, class:"form-control", placeholder: "rahulrajesh@gmail.com"%>
</div>
<div class="mt-3">
    <%= form.label :password%>
<%= form.password_field :password, class:"form-control", placeholder: "veadjsdhu!#$213"%>
</div>
<div class="mt-3">
    <%= form.label :password_confirmation%>
<%= form.password_field :password_confirmation, class:"form-control" %>
</div>
<div class="mt-3">
    <%= form.submit "Sign up", class:"btn btn-primary"%>
</div>

<%end%>